page{
  background: rgb(238, 238, 238);
  font-size: 36rpx;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.news{
  position: relative;
  margin: 30rpx 20rpx;
  border-bottom: 1px solid rgb(199, 199, 199);
  height: 180rpx
}
.date{
  position: absolute;
  right: 20rpx;
  padding-top: 20rpx;
  bottom: 20rpx;
  color: #BCBCBC
}
.bot{
  display: none;
  font-size: 26rpx;
  color: rgb(190, 190, 190);
  text-align: center;
}
.title{
  color: rgb(114, 114, 114);
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.ima{
  display: inline-block;
  color: #fff;
  font-size: 30rpx;
  background: rgb(7, 150, 38);
  padding: 5rpx 20rpx 5rpx 20rpx;
  position: absolute;
  top: 61%;
  left: 20rpx;
}